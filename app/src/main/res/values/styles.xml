<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DialogAnimationFullscreen">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="ThreadsThemeFullscreen" parent="ThreadsTheme">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>


    <style name="ThreadsTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorSecondary">#808080</item>
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="actionModeBackground">@android:color/black</item>
        <item name="actionMenuTextColor">@android:color/white</item>

        <item name="autoCompleteTextViewStyle">@style/ThorAutoCompleteTextViewStyle</item>
        <item name="textAppearanceSearchResultTitle">@style/ThorSearchResult</item>

    </style>


    <style name="ThorAutoCompleteTextViewStyle" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:popupBackground">@android:color/white</item>
    </style>

    <style name="ThorSearchResult" parent="TextAppearance.AppCompat.SearchResult.Title">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ThorPopupTheme" parent="ThemeOverlay.AppCompat.Light" />

</resources>